# logwatch.conf: Managed by puppet.
#
# Local configuration options go here (defaults are in /usr/share/logwatch/default.conf/logwatch.conf)

<% if @mail_to -%>
MailTo = <%= @mail_to %>
<% end -%>
<% if @mail_from -%>
MailFrom = <%= @mail_from %>
<% end -%>
<% if @range -%>
Range = <%= @range %>
<% end -%>
<% if @detail -%>
Detail = <%= @detail %>
<% end -%>
<% @service.each do |ser| -%>
Service = <%= @ser %>
<% end -%>
